---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import { Image } from 'astro:assets';
import avatar from './markshust-avatar.png';
---

<header>
    <HeaderLink href="/" class="avatar">
        <Image src={avatar} width={64} height={64} alt="Mark Shust"/>
    </HeaderLink>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="https://m.academy" target="_blank">Magento Courses</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="mailto:mark@shust.com" target="_blank">Contact</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
	.avatar {
	    float: left;
	    padding: 0 20px;
	}
</style>
