---
const projects = [
  {
    emoji: 'üêã',
    name: 'docker-magento',
    desc: 'The most popular Docker development environment for Magento. Used by thousands of developers worldwide.',
    tags: ['Docker', 'Magento', 'PHP', 'Nginx'],
    url: 'https://github.com/markshust/docker-magento',
  },
  {
    emoji: 'üß©',
    name: 'Marko',
    desc: 'A modular, pragmatically opinionated PHP framework inspired by Magento and Laravel.',
    tags: ['PHP', 'Framework', 'Open Source'],
    url: 'https://github.com/markshust/marko',
  },
  {
    emoji: 'üîó',
    name: 'qklnk',
    desc: 'Quick link shortener built for speed. Clean, fast, branded short URLs without the bloat.',
    tags: ['SaaS', 'URL', 'API'],
    url: 'https://qklnk.co',
  },
  {
    emoji: '‚ö°',
    name: 'Claude Code Workflows',
    desc: 'Curated workflow prompts and patterns for Claude Code. Boost your AI-assisted development.',
    tags: ['Claude', 'AI', 'Workflows'],
    url: 'https://github.com/markshust/claude-code-workflows',
  },
];
---

<section class="section-building" id="building">
  <div class="bg-text">BUILDING</div>
  <div class="section-inner">
    <div class="reveal">
      <div class="section-label">02 / Building</div>
      <h2 class="section-title">Tools that<br>developers love.</h2>
    </div>
    <div class="projects-grid">
      {projects.map((p, i) => (
        <a class={`project-poster reveal delay-${i+1}`} href={p.url} target="_blank" rel="noreferrer">
          <div>
            <span class="project-emoji">{p.emoji}</span>
            <h3 class="project-name">{p.name}</h3>
            <p class="project-desc">{p.desc}</p>
          </div>
          <div class="tags">
            {p.tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
          <span class="bg-num">0{i+1}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
.section-building {
  background: var(--blue);
  color: #000;
  padding: clamp(5rem, 10vw, 9rem) 2.5rem;
  padding-top: clamp(5rem, 5vw, 5rem);
  position: relative;
  overflow: hidden;
  z-index: 40;
}
.section-building::after {
  content: '';
  position: absolute;
  inset: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
  pointer-events: none;
}

.section-inner {
  max-width: var(--max-width);
  margin: 0 auto;
  position: relative;
  z-index: 1;
}
.section-label {
  font-family: var(--font-mono);
  font-size: clamp(0.8rem, 1vw, 0.9rem);
  text-transform: uppercase;
  letter-spacing: 0.2em;
  margin-bottom: 0.75rem;
  opacity: 0.6;
}
.section-title {
  font-family: var(--font-heading);
  font-size: clamp(3.5rem, 7vw, 6rem);
  font-weight: 700;
  line-height: 0.95;
  letter-spacing: -0.04em;
  margin-bottom: 3rem;
  color: #000;
}

.project-poster {
  background: var(--dark);
  color: var(--white);
  border-radius: 20px;
  padding: clamp(2rem, 3.5vw, 3rem);
  position: relative;
  overflow: hidden;
  min-height: 340px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-decoration: none;
  cursor: pointer;
  transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1), box-shadow 0.5s ease;
}
.project-poster:hover {
  transform: translateY(-10px) scale(1.02);
  box-shadow: 0 25px 70px rgba(0,0,0,0.6);
}
/* Cursor glow ‚Äî set via mousemove JS */
.project-poster::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 20px;
  background: radial-gradient(circle at var(--mx, 50%) var(--my, 50%), rgba(59,130,246,0.1), transparent 60%);
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.4s ease;
}
.project-poster:hover::after { opacity: 1; }

.project-poster::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 5px;
}
.project-poster:nth-child(1)::before { background: linear-gradient(90deg, var(--orange), #FF3E00); }
.project-poster:nth-child(2)::before { background: linear-gradient(90deg, var(--blue-bright), #8B5CF6); }
.project-poster:nth-child(3)::before { background: linear-gradient(90deg, var(--green), #06D6A0); }
.project-poster:nth-child(4)::before { background: linear-gradient(90deg, var(--orange), var(--blue)); }

.project-emoji {
  font-size: 3.5rem;
  display: inline-block;
  margin-bottom: 1rem;
  transform-origin: left center;
  transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}
.project-poster:hover .project-emoji { transform: scale(1.3); }
.project-name {
  font-family: var(--font-heading);
  font-size: clamp(1.8rem, 2.8vw, 2.4rem);
  font-weight: 700;
  line-height: 1.1;
  letter-spacing: -0.02em;
  margin-bottom: 0.75rem;
  color: var(--white);
}
.project-desc {
  font-size: clamp(0.92rem, 1.1vw, 1.05rem);
  line-height: 1.65;
  color: var(--gray-light);
  margin-bottom: 1.5rem;
}
.tags {
  display: flex;
  gap: 0.4rem;
  flex-wrap: wrap;
}
.tag {
  font-family: var(--font-mono);
  font-size: 0.65rem;
  padding: 0.25rem 0.55rem;
  background: rgba(59,130,246,0.12);
  color: var(--blue-bright);
  border-radius: 4px;
  text-transform: uppercase;
  letter-spacing: 0.06em;
}

.bg-num {
  position: absolute;
  bottom: -0.75rem; right: 0.75rem;
  font-family: var(--font-heading);
  font-size: 11rem;
  font-weight: 700;
  color: rgba(255,255,255,0.02);
  line-height: 1;
  pointer-events: none;
}

.projects-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

.section-building .bg-text {
  position: absolute;
  bottom: -1rem; left: -0.5rem;
  font-family: var(--font-heading);
  font-size: clamp(10rem, 22vw, 24rem);
  font-weight: 700;
  color: rgba(0,0,0,0.05);
  line-height: 0.85;
  pointer-events: none;
  letter-spacing: -0.05em;
}

@media (max-width: 1024px) {
  .projects-grid { grid-template-columns: 1fr; }
  .section-building { padding-bottom: 12rem; }
}
@media (max-width: 768px) {
  .section-building { padding: 4rem 1.25rem 12rem; }
  .project-poster { min-height: 280px; }
}
@media (max-width: 480px) {
  .project-poster { padding: 1.75rem; min-height: 250px; }
  .project-name { font-size: 1.5rem; }
}
</style>
