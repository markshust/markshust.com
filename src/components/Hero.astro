<style>
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  padding: 8rem 2.5rem 10rem;
}
.hero::before {
  content: '';
  position: absolute;
  top: -20%; right: -10%;
  width: 70%; height: 140%;
  background: #0E0E16;
  transform: skewX(-12deg);
  pointer-events: none;
}
.hero-inner {
  max-width: var(--max-width);
  margin: 0 auto;
  width: 100%;
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 4rem;
  align-items: center;
}
.hero-content { position: relative; z-index: 2; }

.hero-tagline {
  font-family: var(--font-mono);
  font-size: clamp(0.95rem, 1.3vw, 1.15rem);
  color: var(--gray-light);
  margin-bottom: 2rem;
  background: rgba(255,255,255,0.04);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 10px;
  padding: 0.85rem 2rem;
  display: inline-block;
  opacity: 0;
  animation: slideUp 0.8s ease forwards 0.6s;
}
.hero-tagline .kw { color: var(--blue-bright); }
.hero-tagline .vr { color: var(--orange); }
.hero-tagline .str { color: var(--green-bright); }
.hero-tagline .punc { color: var(--gray); }
.hero-tagline .blink { color: var(--orange); animation: blink 1s step-end infinite; }

@keyframes blink { 50% { opacity: 0; } }
@keyframes slideUp {
  from { opacity: 0; transform: translateY(15px); }
  to { opacity: 1; transform: translateY(0); }
}

.hero-name {
  font-family: var(--font-heading);
  font-size: clamp(4.5rem, 9vw, 8rem);
  font-weight: 700;
  line-height: 0.92;
  letter-spacing: -0.05em;
  margin-bottom: 1.75rem;
  opacity: 0;
  animation: heroReveal 1.1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.4s;
}
.hero-name .line-2 {
  display: block;
  background: linear-gradient(135deg, var(--orange) 0%, var(--orange-bright) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
@keyframes heroReveal {
  from { opacity: 0; transform: translateY(50px) scale(0.97); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

.hero-roles {
  display: flex;
  gap: 0.75rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
  opacity: 0;
  animation: slideUp 0.8s ease forwards 0.85s;
}
.hero-role {
  font-family: var(--font-heading);
  font-size: clamp(1.15rem, 1.6vw, 1.4rem);
  font-weight: 700;
  padding: 0.8rem 2rem;
  border-radius: 100px;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  text-decoration: none;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.hero-role:hover { transform: translateY(-2px); }
.hero-role.writing { background: var(--orange); color: #000; box-shadow: 0 6px 30px rgba(255,107,53,0.35); }
.hero-role.writing:hover { background: var(--orange-bright); }
.hero-role.building { background: var(--blue); color: #000; box-shadow: 0 6px 30px rgba(59,130,246,0.35); }
.hero-role.building:hover { background: var(--blue-bright); }
.hero-role.teaching { background: var(--green); color: #000; box-shadow: 0 6px 30px rgba(16,185,129,0.35); }
.hero-role.teaching:hover { background: var(--green-bright); }

.hero-desc {
  font-size: clamp(1.1rem, 1.4vw, 1.3rem);
  line-height: 1.75;
  color: var(--gray-light);
  max-width: 520px;
  opacity: 0;
  animation: slideUp 0.8s ease forwards 1.05s;
}

/* Photo frame */
.hero-photo-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  opacity: 0;
  animation: photoIn 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.5s;
}
@keyframes photoIn {
  from { opacity: 0; transform: scale(0.88) rotate(-3deg); }
  to { opacity: 1; transform: scale(1) rotate(0deg); }
}
.hero-photo {
  width: clamp(300px, 35vw, 520px);
  height: clamp(370px, 43vw, 640px);
  position: relative;
}
.hero-photo-inner {
  width: 100%;
  height: 100%;
  background: var(--dark-card) url('/images/mark-shust-bg.jpg') center/cover no-repeat;
  position: relative;
  overflow: hidden;
  clip-path: polygon(
    0% 5%, 5% 5%, 5% 0%,
    68% 0%, 68% 2.5%, 95% 2.5%, 95% 0%, 100% 0%,
    100% 62%, 97.5% 62%, 97.5% 68%, 100% 68%,
    100% 95%, 95% 95%, 95% 100%,
    32% 100%, 32% 97.5%, 5% 97.5%, 5% 100%, 0% 100%,
    0% 68%, 2.5% 68%, 2.5% 62%, 0% 62%
  );
}
.hero-photo-inner::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255,107,53,0.12) 0%, rgba(59,130,246,0.08) 50%, rgba(16,185,129,0.12) 100%);
  z-index: 5;
  pointer-events: none;
}
.photo-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
  background-size: 30px 30px;
  z-index: 1;
}
.photo-scanline {
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255,107,53,0.3), rgba(59,130,246,0.3), rgba(16,185,129,0.3), transparent);
  z-index: 2;
  animation: scanDown 17s linear infinite;
}
.photo-scanline.h2 {
  animation: scanDown 18s linear infinite;
  animation-delay: -7s;
  opacity: 0.15;
}
.photo-scanline-v {
  position: absolute;
  left: 0; top: 0; bottom: 0;
  width: 1px;
  background: linear-gradient(180deg, transparent, rgba(255,107,53,0.3), rgba(59,130,246,0.3), rgba(16,185,129,0.3), transparent);
  z-index: 2;
  animation: scanRight 18s linear infinite;
  animation-delay: -3s;
}
@keyframes scanRight {
  0% { left: -1px; opacity: 0.2; }
  15% { opacity: 0.6; }
  50% { opacity: 0.4; }
  100% { left: 100%; opacity: 0.2; }
}
.photo-foreground {
  position: absolute;
  inset: 0;
  background: url('/images/mark-shust-over.png') center/cover no-repeat;
  z-index: 3;
  pointer-events: none;
}
@keyframes scanDown {
  0% { top: -1px; opacity: 0.2; }
  15% { opacity: 0.6; }
  50% { opacity: 0.4; }
  100% { top: 100%; opacity: 0.2; }
}

/* Corner brackets */
.corner { position: absolute; width: 22px; height: 22px; z-index: 4; }
.corner::before, .corner::after { content: ''; position: absolute; }
.corner.tl { top: -8px; left: -8px; }
.corner.tl::before { width: 22px; height: 3px; top: 0; left: 0; background: var(--orange); }
.corner.tl::after { width: 3px; height: 22px; top: 0; left: 0; background: var(--orange); }
.corner.tr { top: -8px; right: -8px; }
.corner.tr::before { width: 22px; height: 3px; top: 0; right: 0; background: var(--blue); }
.corner.tr::after { width: 3px; height: 22px; top: 0; right: 0; background: var(--blue); }
.corner.bl { bottom: -8px; left: -8px; }
.corner.bl::before { width: 22px; height: 3px; bottom: 0; left: 0; background: var(--green); }
.corner.bl::after { width: 3px; height: 22px; bottom: 0; left: 0; background: var(--green); }
.corner.br { bottom: -8px; right: -8px; }
.corner.br::before { width: 22px; height: 3px; bottom: 0; right: 0; background: #444; }
.corner.br::after { width: 3px; height: 22px; bottom: 0; right: 0; background: #444; }

/* Floating badge */
.float-code {
  position: absolute;
  bottom: -35px; right: -70px;
  background: rgba(20,20,28,0.85);
  border: 1px solid rgba(255,255,255,0.1);
  padding: 1rem 1.5rem;
  border-radius: 10px;
  font-family: var(--font-mono);
  font-size: 0.95rem;
  color: var(--gray-light);
  animation: floatBadge 5s ease-in-out infinite;
  z-index: 5;
  white-space: nowrap;
  box-shadow: 0 16px 50px rgba(0,0,0,0.6);
  backdrop-filter: blur(10px);
}
.float-code .kw { color: var(--blue-bright); }
.float-code .str { color: var(--green-bright); }
.float-code .vr { color: var(--orange-bright); }
@keyframes floatBadge {
  0%, 100% { transform: translateY(0) rotate(1deg); }
  50% { transform: translateY(-12px) rotate(-1deg); }
}

.float-label {
  position: absolute;
  top: -22px; left: -45px;
  background: var(--orange);
  color: #000;
  font-family: var(--font-mono);
  font-size: 0.85rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  padding: 0.55rem 1.1rem;
  border-radius: 6px;
  z-index: 5;
  animation: floatLabel 6s ease-in-out infinite;
  box-shadow: 0 10px 35px rgba(255,107,53,0.35);
}
@keyframes floatLabel {
  0%, 100% { transform: translateY(0) rotate(-2deg); }
  50% { transform: translateY(-8px) rotate(1deg); }
}

/* Scroll cue */
.scroll-cue {
  position: absolute;
  bottom: 7.5rem; left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  opacity: 0;
  animation: slideUp 0.8s ease forwards 1.6s;
}
.scroll-cue span {
  font-family: var(--font-mono);
  font-size: 0.65rem;
  color: var(--gray);
  text-transform: uppercase;
  letter-spacing: 0.2em;
}
.scroll-pill {
  width: 22px; height: 34px;
  border: 2px solid rgba(255,255,255,0.15);
  border-radius: 11px;
  position: relative;
}
.scroll-pill::before {
  content: '';
  position: absolute;
  top: 5px; left: 50%;
  transform: translateX(-50%);
  width: 3px; height: 8px;
  background: var(--orange);
  border-radius: 3px;
  animation: scrollDot 1.8s ease-in-out infinite;
}
@keyframes scrollDot {
  0%, 100% { top: 5px; opacity: 1; }
  60% { top: 17px; opacity: 0.2; }
}

/* Responsive */
@media (max-width: 1024px) {
  .hero-inner { grid-template-columns: 1fr; gap: 3rem; text-align: center; }
  .hero-content { order: 2; }
  .hero-photo-wrap { order: 1; }
  .hero-roles { justify-content: center; }
  .hero-desc { margin: 0 auto; }
  .float-code { display: none; }
  .float-label { display: none; }
}
@media (max-width: 768px) {
  .hero { padding: 7rem 1.25rem 10rem; min-height: auto; }
  .hero-photo { width: clamp(260px, 65vw, 340px); height: clamp(320px, 80vw, 420px); }
  .scroll-cue { display: none; }
}
</style>
